#| '--'K|
#`------'"
#)


DELIM="${1}"

declare -A CDECK

SIDX=0
for SUITNUM in S:1 H:2 C:3 D:4
do
	SUIT=${SUITNUM%:?}
	SNUM=${SUITNUM#?:}
	CPIC="$(figlet -f cards ${SNUM})"
	for VAL in A 2 3 4 5 6 7 8 9 T J Q K
	do
		CDECK[${VAL}-${SUIT}]="${CPIC//$SNUM/$VAL}"
	done
done

CDECK[2-W]='.------.
|2 ** W|
|*|  |*|
|*|/\|*|
|W ** 2|
`------'"'"

for SUIT in S H C D
do
	TPIC=${CDECK[T-${SUIT}]}
	TPIC=${TPIC/T./10}
	TPIC=${TPIC/\'T/10}
	CDECK[T-${SUIT}]="$TPIC"
done

if [ "$DELIM" = "demo" ]
then
while read -p "Enter card ID: " CARDID
do
	test "$CARDID" || break
	CARDID=${CARDID^^}
	echo "${CDECK[${CARDID}]}" | nl
done
elif [ "$DELIM" ]
then
	echo -e "\n${CDECK[2-W]}${DELIM}"
	for SUIT in S H C D
	do
		for VAL in A 2 3 4 5 6 7 8 9 T J Q K
		do
			echo "${CDECK[${VAL}-${SUIT}]}${DELIM}"
		done
	done
	exit 0
fi
