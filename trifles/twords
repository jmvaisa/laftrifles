550e7ebccc3484a821f149bcbcbafb9bc9ee7f018db80b10cc560000"


##############################################################################
# The allowable variation in the size of the first word will be the combined
# size minus twice the minimum size (3 * 2 = 6).
##############################################################################

VARSIZE=$(( COMBSIZE - 6 ))

REPLY=""
until [ "$REPLY" = q ]
do
	S1=$(( (RANDOM % (VARSIZE+1)) + 3 ))
	S2=$(( COMBSIZE - S1 ))

	W1=$(echo "${WORDLIST}" | xxd -p -r |
	gunzip | grep "^.\{${S1}\}$" | shuf | head -1)

	W2=$(echo "${WORDLIST}" | xxd -p -r |
	gunzip | grep "^.\{${S2}\}$" | shuf | head -1)

	echo "${W1^}${SEP}${W2^}"

	read -p "---->Next: "
done

